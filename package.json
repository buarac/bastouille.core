{
    "name": "bastouille-core-monorepo",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "concurrently -n \"FRONT,BACK\" -c \"cyan.bold,green.bold\" \"npm run dev:frontend\" \"npm run dev:backend\"",
        "dev:frontend": "cd frontend && npm run dev -- --host 0.0.0.0",
        "dev:backend": "cd backend && .venv/bin/uvicorn main:app --reload --host 0.0.0.0 --port 8000"
    },
    "devDependencies": {
        "concurrently": "^9.0.0"
    }
}